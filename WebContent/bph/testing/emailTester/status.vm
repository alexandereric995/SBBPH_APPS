<script>
	var x = "$!success";
	var info = "$!info";
	
	if ( x != "" ) {
		if ( x == "true" ) {
    		_jQuery.jGrowl(info, 
    			{ 
    				theme:  'success'
    			}
    		);
		} else {
    		_jQuery.jGrowl(info, 
    			{ 
    				theme:  'error'
    			}
    		);
		}
	} else {
		_jQuery.jGrowl(info, 
			{ 
				theme:  'error'
			}
		);
	}
</script>
