<script>
    _jq(document).ready(function() {
        _jq('#tblSenaraiSyarikat').DataTable({
    		"language": {
                "url": "../../css/jquery.dataTables/Malay.json"
            }
    	});
    } );
</script>
<style>
.scrollitpopup {
	height:200px; width: 100%; overflow: auto;
}
</style>

<fieldset style="height:320px;width:50% !important">
<legend class="legend">SENARAI SYARIKAT</legend>
<br/>
	
	<div class="scrollitpopup">
	<table id="tblSenaraiSyarikat" class="display" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Bil.</th>
                <th>No. Pendaftaran</th>
                <th>Nama</th>
                <th>Alamat</th>          
                <th>Pilih</th>
            </tr>
        </thead>
        
        <tbody>
			#set ( $count = 0 )
			#if($listSyarikat.size() > 0)
	    		#foreach($u in $listSyarikat)
	    		#set ( $count = $count + 1)
	    		<tr>
	    			<td align="center">$count</td>
	    			<td align="left">$u.id</td>	 
	    			<td align="left">$u.nama</td>	      			
	    			<td align="left">$!u.alamat1 $!u.alamat2 $!u.alamat3, $!u.poskod $!u.bandar.keterangan, $!u.bandar.negeri.keterangan</td>						    	
	    			<td align="center">
	    				<input type="radio" name="radioSyarikat" id="radioSyarikat$u.id" value="$u.id" onclick="$('err_radioSyarikat').innerHTML=''; at(this, event)" />       
	    			</td>
	    		</tr>
	    		#end
			#end
		</tbody>
    </table>
	</div>
	
	
	<br />
	<br />	
	
	<table width="100%">
		<tr>
			<td align="left"><div id="err_radioSyarikat" style="color:#CC0000;font-weight:bold;border:2px #000"></div></td>
			<td align="right">
				<input id="btnPilihSyarikat" type="button" value="Pilih" />
				<input id="btnTutupSyarikat" type="button"  value="Tutup" />
			</td>
		</tr>
	</table>
	
</fieldset>


<script>
	_jq('#btnTutupSyarikat').on('click', function(){
     	jQuery('#popupSenaraiSyarikat').fadeOut();
  	});
  	
	_jq('#btnPilihSyarikat').on('click', function(){
		if(validateRadio()){
			doDivAjaxCall$formname('divSyarikat','getPilihanSyarikat','');
			jQuery('#popupSenaraiSyarikat').fadeOut();
		}
  	});
	
	function validateRadio() {
			
    	var err_count = 0;
		var checking = 0;
		var size = document.${formName}.radioSyarikat.length ;
		
		if( size > 1 ){
    		for( var i = 0; i < document.${formName}.radioSyarikat.length; i++ ){
        		if(document.${formName}.radioSyarikat[i].checked){ 
        			checking += 1;
        		};
        	}
		} else {
			if( document.${formName}.radioSyarikat.checked == true ){
				checking += 1; 
			}
		}
		
    	if ( checking == 0 ){
    		$('err_radioSyarikat').innerHTML = "Sila pilih syarikat terlebih dahulu"; err_count++;  
    	}
		
		if (err_count == 0) {
		}
    	
    	return err_count == 0;
    }
	
</script>