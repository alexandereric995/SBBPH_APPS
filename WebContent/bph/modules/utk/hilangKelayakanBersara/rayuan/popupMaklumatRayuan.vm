<fieldset>
<legend class="legend">Maklumat Rayuan</legend>
	<table width="70%">
		<tr>
			<td style="width:20%"></td>
			<td style="width:1%"></td>
			<td style="width:49%"></td>
		</tr>
		#input_required("noRayuan" "No Rayuan" "$!rekod.noRayuan")
