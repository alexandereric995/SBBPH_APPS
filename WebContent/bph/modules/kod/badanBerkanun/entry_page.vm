
<fieldset>
<legend class="legend">MAKLUMAT REKOD</legend>
<table width="100%">
  <tr>
    <td style="width:150px"></td>
    <td style="width:10px"></td>
    <td></td>
  </tr>

#if ($!command == "add_new_record")
	<tr>
	<td class="label" valign="top">Kementerian &nbsp;<span style="color:#FF2A00">*</span></td><td valign="top">:</td><td>
	<div id="listKementerian">
	#parse("$path/selectKementerian.vm")
	</div>
	<div id="err_kementerian" style="color:#CC0000;font-weight:bold;border:2px #000"></div>
	</td>
	</tr>
	  
	  #input_required("id" "Kod" "$!r.id")
	  #input_required("keterangan" "Keterangan" "$!r.keterangan")
	   #input_required("singkatan" "singkatan" "$!r.singkatan")
#else
	<tr>
		<td class="label" valign="top">Kementerian &nbsp;<span style="color:#FF2A00">*</span></td><td valign="top">:</td><td>
		<div id="listKementerian">
		#parse("$path/selectKementerian.vm")
		</div>
		<div id="err_kementerian" style="color:#CC0000;font-weight:bold;border:2px #000"></div>
		</td>
		</tr>
		  
		  #input_normal_hidden("id" "Kod" "$!r.id")
		  #input_required("keterangan" "Keterangan" "$!r.keterangan")
		  #input_required("singkatan" "singkatan" "$!r.singkatan")
#end

</table>
</fieldset>

<script>
  _jq(function($) {
      $('.currency').autoNumeric('init'); 
 	  $('.number').autoNumeric('init', {aSep: '', vMin: '0', vMax: '999999999999999', lZero: 'keep'} );
 	  $('.postcode').autoNumeric('init', {aSep: '', vMin: '00000', vMax: '99999', lZero: 'keep'} );
 	  $('.mykad').autoNumeric('init', {aSep: '', vMin: '000000000000', vMax: '999999999999', lZero: 'allow'} );
  });
</script>