    <body>
		<table cellpadding="5" cellspacing="0" border="0" style="width: 95%" align="center">
			<tr>
				<td align="right">
					Rujukan Kami<br />
					Tarikh
				</td>
				<td width="5px">
					:<br />
					:
				</td>
				<td width="105px" align="right" style="font-weight: bold">
					$!p.noFail<br />
					&nbsp;&nbsp;&nbsp;$util.getDateTime($todayDate, "MMMM yyyy")
				</td>
			</tr>
			<tr>
				<td colspan="3">
					&nbsp;
				</td>
			</tr>
			<tr>
				<td colspan="3">
					#if ( $p.kepada ) $!p.kepada<br /> #end
					#if ( $uj.agensi.kementerian.keterangan ) $!uj.agensi.kementerian.keterangan<br /> #end
					#if ( $uj.agensi.keterangan ) $!uj.agensi.keterangan<br /> #end
					#if ( $uj.bahagian ) $!uj.bahagian<br /> #end
