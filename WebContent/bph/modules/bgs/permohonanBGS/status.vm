## SUCCESS
#if ($!flagStatusInfo == 'Y')
<table cellpadding="5" cellspacing="0" border="0" width="100%" style="margin-top: 10px;">
  <tr>
    <td style="background: #22C322; color: #FFF; font-weight: bold; box-shadow: 0px 2px 5px #999;"> $!statusInfo </td>
  </tr>
</table>
#end

## ERROR
#if ($!flagStatusInfo == 'T')
<table cellpadding="5" cellspacing="0" border="0" width="100%" style="margin-top: 10px;">
  <tr>
    <td style="background: #FF0000; color: #FFF; font-weight: bold; box-shadow: 0px 2px 5px #999;"> $!statusInfo </td>
  </tr>
</table>
#end